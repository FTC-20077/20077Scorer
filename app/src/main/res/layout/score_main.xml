<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">


    <TextView
        android:id="@+id/TitleCard"
        android:layout_width="398dp"
        android:layout_height="254dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        android:text="Match
        Scorer"
        android:textColor="@color/lightblue"
        android:textSize="100dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/endgame"
        android:layout_width="332dp"
        android:layout_height="98dp"
        android:layout_marginTop="572dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/raleway_bold"
        android:onClick="switchScreenToEndgame"
        android:shadowColor="@color/darkblue"
        android:shadowRadius="100"
        android:text="Endgame"
        android:textColor="@color/darkblue"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/auto"
        android:layout_width="332dp"
        android:layout_height="98dp"
        android:layout_marginTop="340dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/raleway_bold"
        android:onClick="switchScreenToAuto"
        android:shadowColor="@color/darkblue"
        android:shadowRadius="100"
        android:text="Autonomous"
        android:textColor="@color/darkblue"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/teleop"
        android:layout_width="332dp"
        android:layout_height="98dp"
        android:layout_marginTop="456dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/raleway_bold"
        android:onClick="switchScreenToTeleop"
        android:shadowColor="@color/darkblue"
        android:shadowRadius="100"
        android:text="Tele-Op"
        android:textColor="@color/darkblue"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backbutton"
        android:layout_width="332dp"
        android:layout_height="98dp"
        android:layout_marginTop="688dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/raleway_bold"
        android:onClick="goBacktoMain"
        android:shadowColor="@color/darkblue"
        android:shadowRadius="100"
        android:text="Back"
        android:textColor="@color/darkblue"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>